{% extends "base.twig" %}
{% block title %}Register{% endblock %}
{% block content %}

    {% include 'navbar.twig' %}
    {% if  error %}
        <div class="container">
            <div class="row justify-content-md-center ">
                <div class="alert alert-danger" role="alert"><h3>
                        {{ error }}
                    </h3></div>
            </div>
        </div>
    {% elseif success %}
        <div class="container">
            <div class="row justify-content-md-center mt-4">
                <div class="alert alert-success" role="alert"><h3>
                        {{ user|capitalize }}, you are now registered! Please log in!
                    </h3></div>
            </div>
        </div>
    {% endif %}
    <!--Registration form-->
    <div class="container-fluid mb-4" style="width:90rem">
        <div class="row justify-content-md-center">
            <div class="col-md-6 mx-auto">
                <div class="card card-body bg-light mt-5 d-flex" style="width: 40rem">
                    <h2>Create An Account</h2>
                    <p>Fill out form to register</p>
                    <form action="/register" method="post">
                        <!--User name-->
                        <div class="form-group">
                            <label for="name">Name:<sup>*</sup></label>
                            <input type="text" name="name" class="form-control form-control-lg mb-3" placeholder="Jim"
                                   required>
                        </div>
                        <!--User email-->
                        <div class="form-group">
                            <label for="email">Email:<sup>*</sup></label>
                            <input type="email" name="email" class="form-control form-control-lg mb-3"
                                   placeholder="Jim123@gmail.com" required>
                        </div>
                        <!--User password-->
                        <div class="form-group">
                            <label for="password">Password:<sup>*</sup></label>
                            <input type="password" name="password" class="form-control form-control-lg mb-3"
                                   placeholder="Jim123!"
                                   required>
                        </div>
                        <!--User password confirmation-->
                        <div class="form-group">
                            <label for="confirm_password">Confirm Password:<sup>*</sup></label>
                            <input type="password" name="confirm_password" class="form-control form-control-lg mb-4"
                                   placeholder="Jim123!"
                                   required>
                        </div>
                        <div class="row">
{#                            <div class="col">#}
                                <button type="submit" class="btn btn-secondary btn-lg btn-block ">Register</button>
{#                            </div>#}
{#                            <div class="col">#}
{#                                <a href="/login" class="btn btn-light btn-block">Have an account?Login</a>#}
{#                            </div>#}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}