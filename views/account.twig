{% extends "base.twig" %}
{% block title %}UserAccount{% endblock %}
{% block content %}
    <nav class="navbar nav-bg navbar-expand-lg mb-5 p-4">
        <div class="container-fluid ">
            <a class="navbar-brand" href="/"><h1 class="nav-name">Global News</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/?search=economy">Economy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/?search=business">Business</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            More
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/?search=health">Health</a></li>
                            <li><a class="dropdown-item" href="/?search=technology">Technology</a></li>
                            <li><a class="dropdown-item" href="/?search=travel">Travel</a></li>
                            <li><a class="dropdown-item" href="/?search=culture">Culture</a></li>
                        </ul>
                    </li>
                </ul>
                <!--Form-->
                <form class="d-flex" action="/" method="get">
                    <input class="form-control me-2" type="text" id="search" name="search" placeholder="Search"
                           aria-label="Search" required>
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
                <!--Login-->
                <form class="d-flex m-3" action="/login" method="get">
                    <button class="btn btn-outline-light" type="submit">Login</button>
                </form>
                <!--Register-->
                <form class="d-flex ml-3" action="/logout" method="get">
                    <button class="btn btn-outline-light" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <h1>Welcome, {{ auth.name|capitalize }}!</h1>

    <div class="container-fluid mb-4" style="width:90rem">
    <!-- form card change email -->
    <div class="col-md-6 offset-md-3 mb-4">
        <div class="card card-outline-secondary mb-4" style="width: 40rem">
            <div class="card-header">
                <h3 class="mb-0">Change Email</h3>
            </div>
            <div class="card-body">
                <form action="/account" method="post" class="form" role="form" autocomplete="off">
                    <div class="form-group">
                        <label for="inputPasswordOld">Enter new email</label>
                        <input type="email" class="form-control mb-2" id="inputPasswordOld" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn btn-secondary btn-lg float-right">Save</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col">
            <!-- form card change password-->
            <div class="card card-outline-secondary" style="width: 40rem">
                <div class="card-header">
                    <h3 class="mb-0">Change Password</h3>
                </div>
                <div class="card-body">
                    <form action="/change-email" method="post" class="form" role="form" autocomplete="off">
                        <div class="form-group">
                            <label for="password_old">Current Password</label>
                            <input type="password" name="password_old" class="form-control mb-2" id="inputPasswordOld" {{ errors.old_password_match ? 'is-invalid'}}required>
                            {% if errors.old_password_match %}
                                <div class="invalid-feedback">
                                    {{ errors.old_password_match}}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password_new">New Password</label>
                            <input type="password" name="password_new"class="form-control mb-2" id="inputPasswordNew" {{ errors.password_repeat ? 'is-invalid'}} required>
                            {% if errors.password_repeat %}
                                <div class="invalid-feedback">
                                    {{ errors.password_repeat}}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password_confirm">Confirm New Password</label>
                            <input type="password" name="password_confirm" class="form-control mb-2" id="inputPasswordNewVerify"{{ errors.password_repeat ? 'is-invalid'}} placeholder=""
                                   required>
                            {% if errors.password_repeat %}
                                <div class="invalid-feedback">
                                    {{ errors.password_repeat}}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn btn-secondary btn-lg float-right">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
{% endblock %}