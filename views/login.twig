{% extends "base.twig" %}
{% block title %}Login{% endblock %}
{% block content %}
    {% include "navbar.twig" %}
    {% if  error %}
        <div class="container">
            <div class="row justify-content-md-center ">
                <div class="alert alert-danger" role="alert"><h3>
                        {{ error }}
                    </h3></div>
            </div>
        </div>
    {% elseif success %}
        <div class="container">
            <div class="row justify-content-md-center mt-4">
                <div class="alert alert-success" role="alert"><h3>
                        Welcome, {{ user|capitalize }}!
                    </h3></div>
            </div>
        </div>
    {% endif %}
    <!--Login form-->
    <div class="container-fluid" style="width:90rem">
        <div class="row justify-content-md-center">
            <div class="col-md-6 mx-auto">
                <div class="card card-body bg-light mt-5 d-flex" style="width: 40rem">
                    <h2>Log in</h2>
                    <p>Fill in your credentials to log in</p>
                    <form action="/login" method="post">
                        <!--User email-->
                        <div class="form-group">
                            <label for="email">Email:<sup>*</sup></label>
                            <input type="email" name="email" class="form-control form-control-lg mb-3"
                                   placeholder="Jim123@gmail.com" required>
                        </div>
                        <!--User password-->
                        <div class="form-group">
                            <label for="password">Password:<sup>*</sup></label>
                            <input type="password" name="password" class="form-control form-control-lg mb-4"
                                   placeholder="Gnome123!"
                                   required>
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-secondary btn-lg btn-block mb-3">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}